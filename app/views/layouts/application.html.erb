<!DOCTYPE html>
<html>
<head>
  <title>HackerNews</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li><%= link_to "Home", root_url %></li>
      <% if logged_in? %>
      <li><%= current_user.username %></li>
      <li><%= link_to 'Logout', session_url, method: :delete %></li>
      <li><%= link_to 'New Post', new_user_post_url(current_user)%></li>
      <% else %>
      <li><%= link_to 'Sign Up', new_user_url %></li>
      <li><%= link_to 'Login', new_session_url %></li>
      <!-- add a link for new post for unsigned in user -->
      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
